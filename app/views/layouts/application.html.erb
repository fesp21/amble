    <p style="color: green"><%= flash[:notice] %></p>

    <div id="content" class="<%= body_classes %>" <%=@body_attribs || '' %>>
      <%= yield %>
    </div>
    
    <div id="nav">
      <p>This is the nav</p>
      <%= link_to 'test1', {:action => 'show', :controller => 'places', :id => '1'}, :class => 'targetContent' %>
      <%= link_to 'test2', {:action => 'show', :controller => 'places', :id => '2'}, :class => 'targetContent' %>      
    </div>
