<script>
  $(document).ready(function() { 
    
    $('.details a').click(function() {
      $('#places .place').css('display', 'none')
    
      $(this).parents('.place').css('display', 'block')
      $(this).parents('.place').children('.front').css('display', 'none');
      $(this).parents('.place').children('.back').css('display', 'block');
    
      return false;
    })
  
    $('.back_btn').click(function() {
      $('#places .place').css('display', 'block')
      $('#places .place .front').css('display', 'block')
    
      $('#places .place .back').css('display', 'none')

      return false;
    })
  })
</script>


<% form_for :place_filter, @place_filter, 
    :html => {'method' => 'get'} do |f| %>
    
  <div id="places_filter" class="nav_bar">
    <label>Places</label>
  
    <%= f.select "category_id", Category.all.collect { |c| [c.name, c.id]}, {:include_blank => 'All Places'} %>
  </div>

  <div id="set_location" class="nav_bar">
    <label>Location</lable>
  
    <div class="locate_btn"></div>
    
    <div class="locate_txt">
      <%= f.text_field "location", {:placeholder => 'Current Location'} %>
      <%= f.submit %>
    </div>

  </div>
<% end %>



<div id="places">
  <%= render :partial => 'place', :collection => @places %>
</div>

