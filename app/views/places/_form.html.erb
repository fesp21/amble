<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :url, 'Place URL' %><br />
  <%= f.text_field :url %>
</p>

<p>
  <%= f.label :location %><br />
  <i>A street address</i>
    <%= f.text_field :location %><br />
  <i>Or latitude/longitude</i>
  <%= f.text_field :lat %>
  <%= f.text_field :lng %>
</p>
<p>
  <%= f.label :category_id %><br />
  
  <%= f.collection_select :category_id, Category.all, 
    'id', 'name', 
    {:label => 'Category', :include_blank => 'Choose a category...'} %>
</p>
<p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</p>

<div style="border: 1px solid gray; width: 300px;">
  <p>
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </p>
  
  <p>
  OR
  </p>

  <p>
    <%= f.file_field :image %>
  </p>
  
  <p>
  OR
  </p>
  
  <p> 
    leave blank and will be set automatically via flickr api
  </p> 
</div>
